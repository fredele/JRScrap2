<PlayerScreen>:
    id : PlayerScreenId
    player_cover:player_cover
    player_slider:player_slider
    player_artist:player_artist
    player_album:player_album
    player_title:player_title
    player_genre:player_genre
    player_song_elapsed_time:player_song_elapsed_time
    player_song_total_time:player_song_total_time
    play_btn:play_btn
    play_btn_image :play_btn_image
    BoxLayout:
        orientation:'vertical'
        player_cover:player_cover
        player_slider:player_slider
        player_artist:player_artist
        player_album:player_album
        player_title:player_title
        player_genre:player_genre
        player_song_elapsed_time:player_song_elapsed_time
        player_song_total_time:player_song_total_time
        play_btn:play_btn
        play_btn_image :play_btn_image
        BoxLayout:
            player_slider:player_slider
            player_song_elapsed_time:player_song_elapsed_time
            player_song_total_time:player_song_total_time
            orientation:'horizontal'
            BoxLayout:
                size_hint_y : 0.7
                size_hint_x : 0.45
                pos_hint :{'center_x': 0.5, 'center_y': 0.5}
                AsyncImage:
					nocache : True
                    stretch : True
                    id : player_cover
            BoxLayout:
                pos_hint :{'center_x': 0.5, 'center_y': 0.5}
                size_hint_y :1
                size_hint_x : 0.55
                player_artist:player_artist
                player_album:player_album
                player_title:player_title
                player_genre:player_genre
                player_song_elapsed_time:player_song_elapsed_time
                player_song_total_time:player_song_total_time
                orientation:'vertical'

                Label:
                    size_hint_y : 0.40
                    bold:True
                    font_size: 25
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    id: player_album
                    text:''

                Label:
                    font_size: 18
                    size_hint_y : 0.20
                    halign: 'center'
                    valign: 'top'
                    text_size: self.size
                    id: player_artist
                    text:''

                Label:
                    font_size: 18
                    size_hint_y : 0.20
                    valign: 'top'
                    halign: 'center'
                    text_size: self.size
                    id: player_title
                    text:''

                Label:
                    font_size: 14
                    size_hint_y : 0.1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    text_size: self.size
                    id: player_genre
                    text:''
                BoxLayout:
                    size_hint_y : 0.07

                    Label:
                        font_size: 12
                        text_size: self.size
                        halign: 'left'
                        valign: 'bottom'
                        id: player_song_elapsed_time
                        text :'00:00:00'
                    Label:
                        padding_x:15
                        font_size: 12
                        text_size: self.size
                        halign: 'right'
                        valign: 'bottom'
                        id: player_song_total_time
                        text :'00:00:00'
                ProgressBar:
                    padding_x:20
                    halign: 'center'
                    valign: 'top'
                    height : 40
                    size_hint_y :0.12
                    size_hint_x : 0.95
                    id : player_slider
                    orientation:'horizontal'
                    min: 0
                    max:1000
                    value:0
                    on_touch_move : app.PlayerScreenControlWidget.on_player_slider_touch_move()
                Widget:
                    size_hint_y : 0.12
        BoxLayout:
            height:50
            size_hint_y : None
            orientation:'horizontal'
            play_btn:play_btn
            play_btn_image :play_btn_image
            BoxLayout:

                Previous_Button:
                    id:previous_btn
                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.PlayerScreenControlWidget.on_previous_press()
                    Image:
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source: join(app.root_dir + "/textures/", "previous.png" )
                Play_Button:
                    id:play_btn
                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.PlayerScreenControlWidget.on_play_press()
                    Image:
                        id : play_btn_image
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source:  join(app.root_dir + "/textures/", "play.png" )

                Stop_Button:
                    id:stop_btn
                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.PlayerScreenControlWidget.on_stop_press()
                    Image:
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source:  join(app.root_dir + "/textures/", "stop.png" )
                Next_Button:
                    id:next_btn
                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.PlayerScreenControlWidget.on_next_press()
                    Image:
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source: join(app.root_dir + "/textures/", "next.png" )
                BoxLayout:
                    id : volume_box
                    Button:
                        id:volume_btn
                        background_color:[0, 0, 0, 0.8]
                        background_normal:''
                        on_press : app.PlayerScreenControlWidget.on_volume_press()
                        Image:
                            size : (30,30)
                            stretch : False
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y
                            source: join(app.root_dir + "/textures/", "volume.png" )
                Button:

                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.ScreenManager.GotoFilesStackScreen()
                    Image:
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source: join(app.root_dir + "/textures/", "tile.png" )

                Button:
                    id:param_btn
                    background_color:[0, 0, 0, 0.8]
                    background_normal:''
                    on_press : app.ScreenManager.GotoParams()
                    Image:
                        size : (30,30)
                        stretch : False
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        source:  join(app.root_dir + "/textures/", "params.png" )

<FilesStackScreen>:
