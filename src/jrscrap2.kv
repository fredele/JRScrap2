<EditField@Widget>:
	fieldLabel:fieldLabel
	valueLabel:valueLabel
	size_hint_y:None
	height: max(valueLabel.texture_size[1],fieldLabel.texture_size[1])

	BoxLayout:
		fieldLabel:fieldLabel
		valueLabel:valueLabel
		pos: self.parent.pos
		size: self.parent.size
		size_hint_y:None
		Label:
			markup:True
			padding : 2,0
			id: fieldLabel
			size_hint_x : 0.25
			text_size: self.size
			halign: 'left'
			valign: 'top'

			canvas.before:
				Color:
				    rgba: 0.5, 0.5, 0.5, 0.5
				Rectangle:
				    pos: self.pos[0]+1 , self.pos[1] +1
				    size: self.size[0]-2 , self.size[1]-2
		Label:
			markup:True
			id: valueLabel
			size_hint_x : 0.75
			text_size: self.width , None
    		size: self.texture_size[0], self.texture_size[1]
			height: self.texture_size[1]
			halign: 'left'
			valign: 'top'


<ImageField@Widget>:
	srcImage:srcImage
	srcLabel:srcLabel
	size_hint_y:None
	height: 150
	BoxLayout:
		srcImage:srcImage
		srcLabel:srcLabel
		pos: self.parent.pos
		size: self.parent.size
		size_hint_y:None
		Label:
			text: 'Image'
			padding : 2,0
			id: srcLabel
			size_hint_x : 0.25
			text_size: self.size
			halign: 'left'
			valign: 'top'

			canvas.before:
				Color:
				    rgba: 0.5, 0.5, 0.5, 0.5
				Rectangle:
				    pos: self.pos[0]+1 , self.pos[1] +1
				    size: self.size[0]-2 , self.size[1]-2
		AsyncImage:
			nocache : True
			id: srcImage
			size_hint_x : 0.75
			height: self.texture_size[1]
            stretch:True
            allow_stretch:True

<TilesCheckWidget>:
    id:tileswidget
    size_hint:None, None
	width : app.FilesStackWidget.stack.width
	height: max(movieDescription.height +movieLabel.height + movieDirector.height+ + movieActors.height ,movieImage.height )
	movieLabel:movieLabel
	movieImage:movieImage
    movieDescription:movieDescription
    movieDirector:movieDirector
    movieActors:movieActors
    checkbox:checkbox
    stack:stack

    BoxLayout:
        movieLabel:movieLabel
    	movieImage:movieImage
        movieDescription:movieDescription
        movieDirector:movieDirector
        movieActors:movieActors
        checkbox:checkbox
        stack:stack
        pos:self.parent.pos
        size:self.parent.size
        CheckBox:
            id: checkbox
            size_hint:None,None
            height:30
            width:30
            pos_hint:{'x': 0, 'top': 1}
    	AsyncImage:
            id: movieImage
            size_hint:None,None
            width:75
            height:self.width*1.3
            pos_hint:{ 'top': 1}
    		nocache : True
    		source:''
            stretch:True
            allow_stretch:True
        BoxLayout:
            size_hint:None,1
            width:10
        StackLayout:
            id:stack
            #orientation: "vertical"
            pos:self.parent.pos
            width:self.parent.width
        	Label:
                id: movieLabel
                markup:True
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'middle'
        		text:''
            Label:
                id: movieDescription
                markup:True
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'middle'
        		text:''
            Label:
                id: movieDirector
                markup:True
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'middle'
        		text:''
            Label:
                id: movieActors
                markup:True
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'middle'
        		text:''



<ThumbnailCheckWidget>:
    id:thumbnailwidget
    size_hint:None, None
	width : 130
	height: self.width*1.55

	spacing:10
	padding:10
	movieLabel:movieLabel
	movieImage:movieImage
    checkbox:checkbox
	AsyncImage:
        id: movieImage
        x: thumbnailwidget.x
		y: thumbnailwidget.y + bottombox.height
        size_hint:None, None
        width : thumbnailwidget.width
		height: thumbnailwidget.height- bottombox.height
		nocache : True
		source:''
        stretch:True
        allow_stretch:True
    BoxLayout:
        id:bottombox
        x: thumbnailwidget.x
		y: thumbnailwidget.y
        size_hint:None, None
        width : thumbnailwidget.width
        height: movieLabel.height
        CheckBox:
            id: checkbox
    	Label:
            id: movieLabel
            x: bottombox.x+30
    		y: bottombox.y
            size_hint:None, None
    		width : bottombox.width-30
    		height: max(self.texture_size[1]*1.5,30)
    		shorten:True
    		text_size: self.width, None
    		valign:'bottom'
    		halign:'center'
    		text:''

