<NoConnection>:
    id:noconnection
	size_hint : 0.8 , 0.4
	padding : 10,10
	lbl:lbl
    background: join(app.root_dir + "/textures/", "transparent.png" )
	BoxLayout:
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
		orientation: 'vertical'
		Label :
			text : 'No Connection'
			size_hint: 1, None
			height : 50

            halign: 'center'
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
		Label :
            id:lbl
			text :'No Connection to MCWS'
			size_hint: 1, 1

            halign: 'center'
            valign: 'middle'

		BoxLayout:
			height : 50
			size_hint_y : None
			orientation: 'horizontal'

			Button :
				text :'Cancel'
				on_release: noconnection.on_cancel()
                background_color:[0.1, 0.1, 0.1, 1]
                background_normal:''

