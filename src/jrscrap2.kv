                size_hint_y: 1
                width : 50
                background_color:[0, 0, 0, 0.8]
                background_normal:''
                Image:
                    size : (50,30)
                    stretch : False
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    source: join(app.root_dir + "/textures/", "select.png" )

			Button:
				id : selectsearch
